{%
  set classes = [
    node.bundle|clean_class,
    node.isPromoted() ? 'is-promoted',
    node.isSticky() ? 'is-sticky',
    not node.isPublished() ? 'is-unpublished',
    view_mode ? view_mode|clean_class,
    'clearfix',
  ]
%}

<article{{ attributes.addClass(classes) }}>

    {# Full width background region #}
    <div{{ content_attributes.addClass('content') }}>
        {%if content.tvdb_background%}
            <div class="serie-background clearfix" style="background:url('{{serie_background_url}}') no-repeat top center; background-size: cover;">
                <div class="serie-header">
                    <div class="col-md-2">
                        {%if content.tvdb_poster%}
                            <div class="serie-page-poster">
                                {{content.tvdb_poster}}
                            </div>
                        {%endif%}
                    </div>
                    <div class="col-md-4">
                        {#Title#}
                        <div class="serie-title">
                            {{ label }}
                        </div>
                        {#Overview#}
                        <div id="overview">
                            {%if content.body%}
                                <div class="serie-description">
                                    {{content.body}}
                                </div>
                            {%endif%}
                        </div>
                    </div>
                    <div class="col-md-3" id="favorites">
                        <div class="serie-full-favorite">{{ content.flag_favorite_series }}</div>
                        <h3>Last episodes</h3>
                    </div>

                    {#Serie information#}
                    <div class="col-md-3" id="serie-information">
                        {#<h3 id="information">Information</h3>#}
                        <div id="serie-info">
                            {%if imdb_rating%}
                            <div class="imdb-rating">
                                {{imdb_rating}}
                            </div> 
                            {%endif%}
                            {#Air date and time #}
                            {%if content.tvdb_airsdayofweek%}
                                <div class="serie-air-date">
                                    {{content.tvdb_airsdayofweek}}
                                </div>
                            {%endif%}
                            {%if content.tvdb_airstime%}
                                <div class="serie-air-time">
                                    {{content.tvdb_airstime}}
                                </div>
                            {%endif%}

                            {%if content.tvdb_genre%}
                                <div class="serie-genre">
                                    {{content.tvdb_genre}}
                                </div>
                            {%endif%}
                            {%if content.tvdb_runtime%}
                                <div class="serie-runtime">
                                    {{content.tvdb_runtime}}
                                </div>  
                            {%endif%}
                            {%if content.tvdb_rating%}
                                <div class="serie-rating">
                                    {{content.tvdb_rating}}
                                </div>  
                            {%endif%}
                            {%if content.tvdb_status%}
                                <div class="serie-status">
                                    {{content.tvdb_status}}
                                </div>  
                            {%endif%}
                            {%if content.tvdb_firstaired%}
                                <div class="serie-firstaired">
                                    {{content.tvdb_firstaired}}
                                </div>
                            {%endif%}
                            {%if content.tvdb_network%}
                                <div class="serie-network">
                                    {{content.tvdb_network}}
                                </div>  
                            {%endif%}
                            {%if content.tvdb_aliases%}
                                <div class="serie-aka">
                                    {{content.tvdb_aliases}}
                                </div>
                            {%endif%}
                        </div>
                    </div>
                    <div class="col-md-12" id="related-series">
                        {{related_block}}
                    </div>
                </div>
            </div>
        {%endif%}
    </div>
    {# Container with tabs region #}
    <div class="container">
        {# Tab menu #}
        <div class="submenu">
            <ul class="nav nav-pills" role="tablist">
                <li role="presentation" class="active"><a href="#episodes" aria-controls="episodes" role="tab" data-toggle="tab">{% trans %}Episodes{% endtrans %}</a></li>
                <li role="presentation"><a href="#actors" aria-controls="actors" role="tab" data-toggle="tab">{% trans %}Actors{% endtrans %}</a></li>
                <li role="presentation"><a href="#gallery" aria-controls="gallery" role="tab" data-toggle="tab">{% trans %}Gallery{% endtrans %}</a></li>
                <li role="presentation"><a href="#posters" aria-controls="posters" role="tab" data-toggle="tab">{% trans %}Posters{% endtrans %}</a></li>
                    {#<li role="presentation"><a href="#reviews" aria-controls="reviews" role="tab" data-toggle="tab">{% trans %}Reviews{% endtrans %}</a></li>#}             
            </ul>
        </div>
        {# Tab content #}  
        <div class="tab-content">
            {# Episodes #}
            <div role="tabpanel" class="tab-pane fade in active" id="episodes">
                {{ episodes_block }}
            </div>
            {# Actors #}
            <div role="tabpanel" class="tab-pane fade" id="actors">
                {{actors_block}}
            </div>
            {# Gallery #}
            <div role="tabpanel" class="tab-pane fade" id="gallery">
                {{gallery_block}}
            </div>
            {# Posters #}
            <div role="tabpanel" class="tab-pane fade" id="posters">
                {{posters_block}}
            </div>
        </div>
    </div>

</article>
